{
  "name": "laravel-nextjs-docker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "docker compose up -d",
    "watch": "echo 'フロントエンドは docker compose up -d で起動済みです。変更は自動で反映されます！' && docker compose logs -f frontend",
    "build": "docker compose exec frontend npm run build",
    "start": "docker compose up -d",
    "stop": "docker compose down",
    "restart": "docker compose restart",
    "prepare": "husky install",
    "logs": "docker compose logs -f frontend",
    "lint:staged": "lint-staged",
    "precommit:secrets": "secretlint '**/*' --ignore 'node_modules'",
    "precommit:typecheck": "cd frontend && npx tsc --noEmit",
    "lint:fix": "npm run lint:staged",
    "test:all": "echo 'Running full test suite... (Implement your test command here)'",
    "build:frontend": "echo 'Validating Next.js build...' && cd frontend && npm run build",
    "prepush:check": "npm run precommit:typecheck && npm run build:frontend"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "secretlint": "^11.2.5"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "npm --prefix frontend run lint:fix --",
      "npm --prefix frontend run format --",
      "npm --prefix frontend run test:staged --"
    ],
    "backend/**/*.php": [
      "./vendor/bin/pint"
    ],
    "{*.{json,yaml,md,css,scss,js,ts},backend/**/*.{json,yaml,md,css,scss,js,ts}}": [
      "prettier --write"
    ]
  }
}
